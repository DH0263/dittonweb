# ===========================================
# Dittonweb Environment Variables Template
# ===========================================
# Copy this file to .env and fill in your values

# ===== Backend (FastAPI) =====

# Gemini AI API Key (for Math Tutor)
GEMINI_API_KEY=your_gemini_api_key_here

# Discord Webhooks
DISCORD_WEBHOOK_ALERT=https://discord.com/api/webhooks/xxx/xxx
DISCORD_WEBHOOK_GENERAL=https://discord.com/api/webhooks/xxx/xxx

# Discord Bot Token (optional)
DISCORD_TOKEN=your_discord_bot_token

# Notion API (optional)
NOTION_API_KEY=your_notion_api_key

# ===== Frontend (React) =====

# Backend API URL (Railway will provide this)
VITE_API_URL=https://your-backend.railway.app

# ===== Railway Deployment =====

# Railway Project Token (for GitHub Actions)
RAILWAY_TOKEN=your_railway_project_token

# ===== Database =====
# PostgreSQL for Railway deployment
# Railway automatically provides DATABASE_URL when you add a PostgreSQL plugin
DATABASE_URL=postgresql://user:password@host:5432/database

# SQLite is used for local development when DATABASE_URL is not set
